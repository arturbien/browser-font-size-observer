{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2017",
      "DOM"
    ],
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "paths": {
      "browser-font-size-observer": [
        "./src/index"
      ]
    }
  }
}